  .container
    .row.clearfix
        .col-md-12.column
          nav.navbar.navbar-default.navbar-inverse.navbar-fixed-top(role='navigation')
            .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
              a.navbar-brand(href='/') Home
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
              ul.nav.navbar-nav
                li
                  a(href='/about') About
                li
                  a(href='/faq') FAQ
                li
                  a(href='/contact') Contact
                li
                  a(href='/resume') Resume
                li
                  a(href='/portfolio') Portfolio
              if(user)
                ul.nav.navbar-nav.navbar-right
                  if(user)
                    li
                      a(href='/logout')= user.email
                    li
                      a(href='/portfolio/new') New Project
  .container
    .row.clearfix
      .col-md-4.column
      .col-md-4.column
        form(action='/login', method='post')
          .form-group
            label Email address
            input.form-control(type='email', autofocus=true, name='email', placeholder='Email Address')
          .form-group
            label Password
            input.form-control(type='password', autofocus=true, name='password', placeholder='Password')
          button.btn.btn-default Login
      .col-md-4.column
